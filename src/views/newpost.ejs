    <div class="container-new-post">
        <div class="new-post">
            <form action="">
                <h1>Adicionar novo post</h1>
                <input class="titulo" type="text" placeholder="Insira o título do post">
                <h4>Imagem</h4>
                <input class="file" type="file">
                <textarea class="textarea" rows="15" placeholder="Insira o conteúdo aqui"></textarea>
                <input class="postar" type="submit" value="Postar">
            </form>
        </div>
    </div>

    
  
  <script src="/model/script.js"></script>
